<Window x:Class="AppDirect.WindowsClient.Browser.UI.BrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:AppDirect.WindowsClient.Browser.Control"
        Title="MainWindow" Height="500" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Text="http://www.google.com" Name="addressTextBox" KeyDown="addressTextBox_KeyDown_1" />
        <control:WpfCefBrowser Grid.Row="1" StartUrl="about:blank" x:Name="browser" />
    </Grid>
</Window>
